
<div class="row">
	<div class="col-lg-9">
		<h3>フォローされているユーザー一覧</h3>
	</div>
	<div class="col-lg-3 back-menu">
		<p><%= link_to 'マッチング済み一覧', matches_user_user_path(current_user) %></p>
		<p><%= link_to 'フォローしているユーザー一覧', follows_user_user_path(current_user) %></p>
	</div>
</div>

<div class="row clearfix content-row">
	<% @users.each do |user| %>
		<div class="col-lg-4 content-box">
			<div class ="content">
				<%= link_to user_user_path(user) do %>
					<%= attachment_image_tag user, :user_icon, fallback: "no_image.jpg" %>
				<% end %>
			</div>
			<div class="name">
				<%= link_to user_user_path(user.id) do %>
					<%= user.nick_name %>
				<% end %>
			</div>
			<p><%= user.user_location %>で活動中</p>
			<p><%= link_to truncate("#{user.user_introduction}", length: 20, omission:"..."), user_user_path(user) %></p>
		</div>
	<% end %>
</div>
<br>
