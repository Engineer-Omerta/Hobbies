<h1>フォロー済みユーザー一覧</h1>
<p><%= link_to 'マッチング済み一覧', matches_user_user_path(current_user) %></p>
<p><%= link_to 'フォローされているユーザー一覧', followers_user_user_path(current_user) %></p>

<% @users.each do |user| %>
	<div class="match-user">
		<%= link_to user_user_path(user) do %>
			<%= attachment_image_tag user, :user_icon, :fill, 150, 150, fallback: "no_image.jpg" %>
		<% end %>
		<%= user.nick_name %>
		<p><%= user.user_location %>で活動中</p>
		<p><%= link_to truncate("#{user.user_introduction}", length: 20, omission:"..."), user_user_path(user) %></p>
	</div>
<% end %>