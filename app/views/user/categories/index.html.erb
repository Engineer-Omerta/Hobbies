
<div class="row">
	<div class="col-lg-10">
	</div>
	<div class="col-lg-2 back-menu">
		<p><%= link_to 'hobbyを新規作成する', new_user_hobby_path %></p>
	</div>
</div>

<div class="row clearfix">
	<div class="col-lg-4">
	</div>
	<div class="col-lg-4 search-box">
		<p>hobbyを検索する</p>
			<%= form_tag user_hobby_search_path, method: 'get',class: 'form-box' do %><!-- form_tagはDBの変更に関わらない時に使う記述 -->
			     <%= text_field_tag :search, params[:search], placeholder: "hobby名",class: 'form-search' %>
			     <div class="form-submit">
			     	<%= submit_tag "検索",class: 'form-search', :name => nil %><!-- :name => nilが意味不明 -->
			     </div>
			<% end %> <!-- 検索フォームのend -->
	</div>
	<div class="col-lg-4">
	</div>
</div>

<div class="headline">
	<p>hobbyをカテゴリから選ぶ</p>
</div>

<div class="row clearfix content-row">
	<% @categories.each do |category| %>
		<div class="col-lg-4 content-box">
			<%= link_to user_category_path(category.id) do %>
				<div class ="content">
					<%= attachment_image_tag category, :category_image %>
				</div>
				<div class="name">
					<%= category.category_name %>
				</div>
			<% end %>
		</div>
	<% end %>
</div>

