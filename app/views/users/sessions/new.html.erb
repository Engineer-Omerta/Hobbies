
<div class="field row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <h2 class="user-sign_in-center">ユーザーログイン</h2>
        <br>
        <p class="user-sign_in-center">メールアドレスとパスワードを入力して下さい。</p>
    </div>
    <div class="col-lg-4"></div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row">
        <div class="col-lg-3"></div>
        <div class="col-lg-2">
            <%= f.label :email %>
        </div>
        <div class="col-lg-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <div class="field row">
        <div class="col-lg-3"></div>
        <div class="col-lg-2">
            <%= f.label :パスワード %>
        </div>
        <div class="col-lg-4">
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
            <% if devise_mapping.rememberable? %>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :ログイン状態を保存する %>
                </div>
            <% end %>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <div class="field row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div class="actions">
                <%= f.submit "ログイン", class:"btn btn-lg btn-primary" %>
            </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
<% end %>